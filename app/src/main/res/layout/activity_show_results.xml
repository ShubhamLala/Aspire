<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowResults">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/showResultAppBar">
        <include layout="@layout/toolbar" />
    </com.google.android.material.appbar.AppBarLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/showResultAppBar"
        android:text="Physics Marks: "
        android:textSize="25sp"
        android:padding="8dp"
        android:id="@+id/physicsMarks"
        android:visibility="invisible"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/physicsMarks"
        android:text="Chemistry Marks: "
        android:textSize="25sp"
        android:padding="8dp"
        android:id="@+id/chemistryMarks"
        android:visibility="invisible"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/chemistryMarks"
        android:text="Maths Marks: "
        android:textSize="25sp"
        android:padding="8dp"
        android:id="@+id/mathsMarks"
        android:visibility="invisible"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/mathsMarks"
        android:text="Total Marks: "
        android:textSize="25sp"
        android:padding="8dp"
        android:id="@+id/totalMarks"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/buttonp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="161dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="162dp"
        android:text="Show Previous results"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/totalMarks" />

</androidx.constraintlayout.widget.ConstraintLayout>