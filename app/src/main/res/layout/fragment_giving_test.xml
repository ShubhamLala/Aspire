<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="30"
    android:id="@+id/parent"
    tools:context=".GivingTestFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:scaleType="fitCenter"
        android:src="@drawable/physics"
        android:padding="8dp"
        android:id="@+id/question"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.05dp"
        android:background="#000000"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="16"
        android:id="@+id/scrollView">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:id="@+id/optionsLinear">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:id="@+id/firstLinear">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/firstRadio"
                    android:clickable="false"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/firstImage"
                    android:layout_marginStart="16dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:id="@+id/secondLinear">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/secondRadio"
                    android:clickable="false"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher"
                    android:layout_marginStart="16dp"
                    android:id="@+id/secondImage"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/thirdLinear"
                android:padding="8dp">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/thirdRadio"
                    android:clickable="false"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher"
                    android:layout_marginStart="16dp"
                    android:id="@+id/thirdImage"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:id="@+id/fourthLinear">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fourthRadio"
                    android:clickable="false"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher"
                    android:layout_marginStart="16dp"
                    android:id="@+id/fourthImage"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="30"
        android:id="@+id/hiddenLinear"
        style="?attr/buttonBarStyle"
        android:layout_marginTop="8dp">
        <Button
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_marginStart="8dp"
            style="?attr/buttonBarButtonStyle"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Previous"
            android:id="@+id/previous"
            android:textColor="#000000"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_marginStart="8dp"
            android:textAllCaps="false"
            style="?attr/buttonBarButtonStyle"
            android:layout_height="wrap_content"
            android:text="Goto"
            android:id="@+id/traverse"
            android:textColor="#000000"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="10"
            android:textAllCaps="false"
            style="?attr/buttonBarButtonStyle"
            android:layout_marginStart="8dp"
            android:id="@+id/next"
            android:layout_height="wrap_content"
            android:text="Next"
            android:layout_marginEnd="8dp"
            android:textColor="#000000"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Clear selection"
            android:layout_marginStart="8dp"
            android:id="@+id/clearSelection"
            style="?attr/buttonBarButtonStyle"
            android:textColor="#000000"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:backgroundTint="#ff0000"
            android:layout_marginStart="16dp"
            android:id="@+id/submit"
            style="?attr/buttonBarButtonStyle"
            android:textColor="#000000"/>
    </LinearLayout>












    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="18"
        android:elevation="4dp"
        app:cardUseCompatPadding="true"
        android:id="@+id/gotoCard"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="60"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:orientation="horizontal"
                android:weightSum="50">
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="wrap_content"
                    android:id="@+id/one"
                    android:layout_marginStart="8dp"
                    android:text="1"
                    android:textColor="#000000"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_marginStart="8dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/two"
                    android:text="2"
                    android:textColor="#000000"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_marginStart="8dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/three"
                    android:text="3"
                    android:textColor="#000000"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_marginStart="8dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/four"
                    android:text="4"
                    android:textColor="#000000"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="wrap_content"
                    android:id="@+id/five"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:text="5"
                    android:textColor="#000000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:orientation="horizontal"
                android:weightSum="50">
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_marginStart="8dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/six"
                    android:text="6"
                    android:textColor="#000000"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="wrap_content"
                    android:id="@+id/seven"
                    android:layout_marginStart="8dp"
                    android:text="7"
                    android:textColor="#000000"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_marginStart="8dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/eight"
                    android:text="8"
                    android:textColor="#000000"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_marginStart="8dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/nine"
                    android:text="9"
                    android:textColor="#000000"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/ten"
                    android:text="10"
                    android:textColor="#000000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:orientation="horizontal"
                android:weightSum="50">
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="wrap_content"
                    android:id="@+id/eleven"
                    android:layout_marginStart="8dp"
                    android:text="11"
                    android:textColor="#000000"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_marginStart="8dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/twelve"
                    android:text="12"
                    android:textColor="#000000"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="wrap_content"
                    android:id="@+id/thirteen"
                    android:layout_marginStart="8dp"
                    android:text="13"
                    android:textColor="#000000"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_marginStart="8dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/fourteen"
                    android:text="14"
                    android:textColor="#000000"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/fifteen"
                    android:text="15"
                    android:textColor="#000000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:orientation="horizontal"
                android:weightSum="50">
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_marginStart="8dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/sixteen"
                    android:text="16"
                    android:textColor="#000000"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="wrap_content"
                    android:id="@+id/seventeen"
                    android:layout_marginStart="8dp"
                    android:text="17"
                    android:textColor="#000000"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_marginStart="8dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/eighteen"
                    android:text="18"
                    android:textColor="#000000"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="wrap_content"
                    android:id="@+id/nineteen"
                    android:layout_marginStart="8dp"
                    android:text="19"
                    android:textColor="#000000"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/twenty"
                    android:text="20"
                    android:textColor="#000000"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:orientation="horizontal"
                android:weightSum="50">
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_marginStart="8dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/twentyone"
                    android:text="21"
                    android:textColor="#000000"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_marginStart="8dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/twentytwo"
                    android:text="22"
                    android:textColor="#000000"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="wrap_content"
                    android:id="@+id/twentythree"
                    android:layout_marginStart="8dp"
                    android:text="23"
                    android:textColor="#000000"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_marginStart="8dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/twentyfour"
                    android:text="24"
                    android:textColor="#000000"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="wrap_content"
                    android:id="@+id/twentyfive"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="25"
                    android:textColor="#000000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:orientation="horizontal"
                android:weightSum="50">
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_marginStart="8dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/twentysix"
                    android:text="26"
                    android:textColor="#000000"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_marginStart="8dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/twentyseven"
                    android:text="27"
                    android:textColor="#000000"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_marginStart="8dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/twentyeight"
                    android:text="28"
                    android:textColor="#000000"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="wrap_content"
                    android:id="@+id/twentynine"
                    android:layout_marginStart="8dp"
                    android:text="29"
                    android:textColor="#000000"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/thirty"
                    android:text="30"
                    android:textColor="#000000"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>